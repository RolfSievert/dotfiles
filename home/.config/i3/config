# Special buttons
bindsym XF86AudioMute exec --no-startup-id $HOME/.config/i3/volume.sh mute #mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute 1 toggle #mute mic
bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.config/i3/volume.sh up 5 #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.config/i3/volume.sh down 5 #decrease sound volume
bindsym XF86MonBrightnessUp exec --no-startup-id $HOME/.config/i3/backlight.sh up 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id $HOME/.config/i3/backlight.sh down 10 # decrease screen brightness
# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
# Move to workspace 1 and start brave
bindsym $mod+c workspace 1; exec firefox
# Lock screen
bindsym Control+$mod+l exec $HOME/.scripts/lock.sh
# Rofi
bindsym $mod+Tab exec rofi -show window -show-icons -kb-cancel Alt_L
bindsym Super_L exec rofi -show run -kb-cancel Super_L -width 25% -lines 5
# Switch workspaces
bindsym $mod+s exec python3 $HOME/.config/i3/swap_workspaces.py
# Open empty workspace
bindsym $mod+o exec python3 $HOME/.config/i3/next_empty.py
# Move focused container up 10 workspaces
bindsym $mod+Shift+s exec python3 $HOME/.config/i3/shift_container_to_workspace.py
# Open nmtui
