{
    "suggest.noselect": true, // make tab select first suggestion
    "inlayHint.enable": false, // inlayHint shows parameter info at end of line
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    }
}
